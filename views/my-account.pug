extends main_logged_in

block my_account 
    form(id='editAccount' onsubmit="return false;")
        div 
            label(for="username") username:
            input(type="text" id="username" value=me.username)
        div 
            label(for="name") imię:
            input(type="text" id="name" value=me.name)
        div 
            label(for="surname") nazwisko:
            input(type="text" id="surname" value=me.surname)
        div 
            label(for="email") email:
            input(type="text" id="email" value=me.email)
        div
            label(for="newPassword") nowe hasło:
            input(type="password" id="newPassword")
        div
            label(for="confirmPassword") potwierdź hasło:
            input(type="password" id="confirmPassword")
        div 
            input(type="submit" value="Edytuj konto")
    p#editError(style="color: red;")
    script(src="/scripts/my-account.js" type="module")